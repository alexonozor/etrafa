
<input type="hidden" class="category-input2">
<input type="hidden" class="category-input2Name">
<input type="hidden" class="category-input3">
<input type="hidden" class="category-input3Name">

<div  class="category-selector" draggable="true">
<p class="our-modal-title">Select Category</p>
<div class="categoryinner">
    <div class="category">
        <ul id="category1">
            <% Category.roots.each do |category| %>
            <li data-category="<%= category.id %>">
                <%= link_to category.name, select_category_children_path(category), remote: true, class: 'categories' %>
            </li>
            <% end %>
        </ul>
    </div>
<div class="category">
<ul id="category2">
</ul>
</div>
<div class="category">
<ul id="category3"> 

</ul>
</div>
</div>
<button class="btn btn-default cancel-button pull-right">Cancel</button>
<button class="btn btn-danger select-button pull-right" disabled="disabled">Select</button>
</div>
<div id="overlay" ondrop="drop(event)" ondragover="allowDrop(event)"></div>

<%= simple_form_for(@posting_source) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
     <%= f.input :category_ids, input_html: { name: "posting_source[category_ids][]" }, as: :select, prompt: 'Select Categories', collection: ['-click here-'], label: 'Product Catergory',  class: "form-control", id:"select-categories" %>
    <%= f.input :description %>
    <%= f.input :purchase_quantity %>
    <%= f.input :quantity_type, collection:  @quantity_types, prompt: "Select your age", selected: "Pieces" %>
    <%= f.input :valid_to, as: :date %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
