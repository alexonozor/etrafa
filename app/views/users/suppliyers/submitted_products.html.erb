<div class="row">
    <div class="col-lg-10">
        <div class="col-lg-12"><h3 class="red">Submited products</h3></div>
        <div class="col-lg-12">
            <%= link_to "<i class='fa fa-th-large fa-2x pull-left' aria-hidden='true'></i> Saved Products".html_safe, suppliyer_panel_saved_products_path, class: "btn btn-default grey btn-sm" %>
            <%= link_to "<i class='fa fa-th-large fa-2x pull-left' aria-hidden='true'></i> Submited Products".html_safe, suppliyer_panel_submitted_products_path, class: "btn btn-default grey btn-sm" %>
            <%= link_to "<i class='fa fa-th-large fa-2x pull-left' aria-hidden='true'></i> Create New Products".html_safe, new_suppliyer_panel_products_path, class: "btn btn-default grey btn-sm" %>
        </div>
        <div class="row">
        <div class="col-lg-12">
            <table class="table">
                <thead>
                    <tr>
                    <th>pictures</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Price</th>
                    <th>size</th>
                    <th>Action</th>
                    <th></th>
                    </tr>
                </thead>
                <tbody>
                <% @submitted_products.each do |product| %>
                    <tr>
                        <td><%= image_tag product.primary_picture.url(:thumb), class: "resize-with" if product.primary_picture? %></td>
                        <td><%= product.title %></td>
                        <td><%= truncate(product.description, length: 10) %></td>
                        <td><%=  product.price %></td>
                        <td><%=  product.size %></td>
                        <td><%= link_to "Edit", edit_product_path(product), class: 'btn btn-warning'  %></td>
                        <td><%= link_to "Delete", product_path(product), method: :delete, comfirm: 'Are you sure you want to delete?', class: 'btn btn-danger'  %></td>
                    </tr>
                <% end %>
                </tbody>
            </table>
        </div>
</div>
            
