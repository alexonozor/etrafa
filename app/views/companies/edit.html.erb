
  <%= simple_form_for(@companies, html: { class: 'form-horizontal' }) do |f| %>
    <% if @companies.errors.any? %>
      <div id="error_explanation">
        <h2>
          <%= pluralize(@companies.errors.count, "error") %> prohibited this companies from being saved:</h2>

        <ul>
          <% user.errors.full_messages.each do |message| %>
            <li>
              <%= message %>
            </li>
            <% end %>
        </ul>
      </div>
      <% end %>


          
          <div class="row">
            <div class="col-lg-1"></div>
            <div class="col-lg-6">
              <div class="form-group">
                <%= f.input :name, input_html: { class: "form-control", id: "sellerEmail1" }, placeholder: "name" %>
              </div>
              <div class="form-group">
                <%= f.input :profile, input_html: { class: "form-control", id: "password" }, as: :text, placeholder: "Profile Description" %>
              </div>
              <div class="form-group">
                <%= f.input :number_of_employees, collection: 5..20, input_html: { class: "form-control", id:"confirmPassword" }, placeholder:"number of employees" %>
              </div>
            </div>
          </div>
       
        <div class="row">
          <div class="col-lg-1"></div>
          <div class="col-lg-6">

            <div class="form-group">
              <div class="row">

                <div class="col-xs-2">
                  <%= f.input :trademark, input_html: { class: "form-control" } %>
                </div>
                <div class="col-xs-5">
                  <%= f.input :business_type, input_html: {  class:"form-control", id:"sellerFullName" }, placeholder:"First Name" %>
                </div>
                <div class="col-xs-5">

                  <%= f.input :year_of_establishment, input_html: { class:"form-control", id:"sellerFullName" }, placeholder:"Last Name (Surname)" %>
                </div>
              </div>
            </div>


            <div class="form-group">
              <%= f.input :factory_address, input_html: { class:"form-control" }, collection: [ "Teacher", "Farmer", "Doctor" ], include_blank: false %>
            </div>
            <div class="form-group">
              <%= f.input :rd_Capacity,  include_blank: false, input_html: { class: "form-control" }   %>
            </div>

            <div class="form-group">
              <%= f.input :company_phone_number, input_html: { class:"form-control", id:"serLocation" } %>
            </div>

            <div class="form-group">
              <%= f.input :show_room, input_html: { class:"form-control", id:"sellerCompanyName" }, placeholder:"Company Name" %>
            </div>

            

       
       
        <div class="row">
          <div class="col-lg-1"></div>
          <div class="checkbox col-lg-11">
            <label>
                <input type="checkbox" value="" checked>
                I confirm that i have read and understood the privacy policy and i expressly give my consent to<br>the collection,use and disclosure of my personal data by you for the purpose set out in the<br>privacy policy.
            </label>
          </div>
        </div>
        <div class="row"> 
          <div class="col-lg-1">
            <%= f.button :submit, "Submit",  class:"btn btn-primary btn-lg center"  %>
          </div>
        </div>
        <% end %>

    </div>
</div>

